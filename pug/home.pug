header.hero
  .container
    .row.hero-logo
      .col-6.offset-3.col-sm-4.offset-sm-4
        img.img-responsive.img-center(src="img/pap-logo.png")
    .row.hero-links
      .col-md-10.offset-md-1
        a.cta(href="#contact") Book a Shoot
  nav
    .container  
      ul.block-grid-4.text-center
        li(ng-repeat="page in siteNav")
          a(href="{{ page.link }}")
            span.hide-sm.show-lg-inline-block.nav-icon
              i(class="icon {{ page.icon }}")
            span.hide.show-sm-inline-block {{ page.page }}
        
