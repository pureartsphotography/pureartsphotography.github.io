section.showcase
  .container
    .row
      .col-12
        h2 Showcase
    ul.block-grid-2.block-grid-md-4.gallery
      li(ng-repeat="p in portfolio | filter: {'showcase': true} | limitTo: 8")
        img.img-responsive.img-center(ng-src="{{ imgBase + p.image }}" alt="{{ p.title }}")
    .row
      .col-8.offset-2.col-md-6.offset-md-3
        a.cta(href="#portfolio") View Full Portfolio
        
section.testimonials
  .container
    .row
      .col-12
        h2 What Are People Saying?
        div(ng-repeat="t in testimonials")
          .row
            .col-sm-9.push-sm-3
              p {{ t.testimony }}
            .col-sm-3.pull-sm-9
              h6 {{ t.name }}

section.contact
  .container
    .row
      .col-12
        h2 Contact Me
        form.row(method="", action="", novalidate)
          fieldset.col-md-6
            div.form-part
              label(for="name") Name
              input#name(type="text")
            div.form-part
              label(for="email") Email
              input#email(type="email")
            div.form-part
              label(for="phone") Phone
              input#phone(type="text")
          fieldset.col-md-6
            div.form-part.form-message
              label(for="message") Message
              textarea#message
